{
    "name": "BTC Alarm Extension",
    "version": "1.0",
    "description": "A simple BTC alarm extension",
    "permissions": ["activeTab",
      "alarms",
      "declarativeContent",
      "storage"],
    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

   "options_page": "options.html",

   "page_action": {
      "default_popup": "popup.html",

      "default_icon": {
        "16": "images/bitcoin-coin16.png",
        "32": "images/bitcoin-coin32.png",
        "48": "images/bitcoin-coin48.png",
        "128": "images/bitcoin-coin128.png"
      }

    },

    "icons": {
      "16": "images/bitcoin-coin16.png",
      "32": "images/bitcoin-coin32.png",
      "48": "images/bitcoin-coin48.png",
      "128": "images/bitcoin-coin128.png"
    },

    "manifest_version": 2
  }